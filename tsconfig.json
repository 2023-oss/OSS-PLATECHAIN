{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "./",
    "typeRoots": ["./@type/"]
  },
  "include": [
    "src/**/*",
    "console/server/**/*", 
    "@types"
  ],
  "exclude": [
    "console/frontend/**/*",
    "node_modules"
  ]
 }